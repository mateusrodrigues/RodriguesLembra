@model RodriguesLembra.Models.Realm
@{
    ViewBag.Title = "Deletar";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Deletar Contexto de Tarefas</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    @using (Html.BeginForm("Delete", "Realms", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(m => m.RealmID)
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.Description)
        @Html.HiddenFor(m => m.UserID)

        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="panel-title">@Model.Name</h3>
            </div>
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-10">
                        <button type="submit" class="btn btn-danger">Deletar</button>
                        @Html.ActionLink("Cancelar", "Index", "Realms", null, new { @class = "btn btn-warning" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
